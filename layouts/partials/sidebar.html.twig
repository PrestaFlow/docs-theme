              <!-- End Logo -->
          </header>
          <!-- End Header -->



          <!-- Content -->
          <div
              class="h-[calc(100%-35px)] lg:h-[calc(100%-93px)] overflow-y-auto [&::-webkit-scrollbar]:w-2 [&::-webkit-scrollbar-thumb]:rounded-full [&::-webkit-scrollbar-track]:bg-gray-100 [&::-webkit-scrollbar-thumb]:bg-gray-300 dark:[&::-webkit-scrollbar-track]:bg-neutral-700 dark:[&::-webkit-scrollbar-thumb]:bg-neutral-500">
 {%- block navigation ~%}
 <nav class="hs-accordion-group pb-3 w-full flex flex-col flex-wrap" data-hs-accordion-always-open>
    <ul>
 {#- docs groups ~#}

          {%- for group in site.sidebar ~%}
            {%- if site.page('docs/' ~ group.title|slugify) ~%}
              {%- set group_title = site.page('docs/' ~ group.title|slugify).title ~%}
            {%- else ~%}
              {%- set group_title = group.title ~%}
            {%- endif ~%}
            {%- set group_pages = site.pages ~%}
            {%- if group_pages|length > 0 ~%}
        <li class="hs-accordion px-5 mb-1.5 {% if (page.folder != '') and ('docs/' ~ group.title|slugify starts with page.folder) %}active{%- endif ~%}" id="suites-accordion">
            <button type="button"
                class="hs-accordion-toggle w-full text-start flex gap-x-3 py-2 px-3 text-sm text-gray-800 rounded-lg hover:bg-gray-100 disabled:opacity-50 disabled:pointer-events-none dark:hs-accordion-active:bg-neutral-700 focus:outline-none dark:hover:bg-neutral-700 dark:text-neutral-300 dark:focus:bg-neutral-700">

                {%- if group.icon is defined ~%}
                  {{- include('partials/icons/' ~ group.icon ~ '.html.twig') ~}}
                {%- endif ~%}

                {{ group_title|trans }}

                <svg class="hs-accordion-active:-rotate-180 flex-shrink-0 mt-1 w-3.5 h-3.5 ms-auto transition"
                    xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m6 9 6 6 6-6" />
                </svg>
            </button>

            <div id="suites-accordion-sub"
                class="hs-accordion-content w-full overflow-hidden transition-[height] duration-300 hidden"
                {% if (page.folder != '') and 'docs/' ~ group.title|slugify starts with page.folder %}style="display: block"{%- endif ~%}
                >
                <ul class="hs-accordion-group ps-7 mt-1.5 space-y-1.5 relative before:absolute before:top-0 before:start-[18px] before:w-0.5 before:h-full before:bg-gray-100 dark:before:bg-neutral-700"
                    data-hs-accordion-always-open>

            {#-{%- for p in site.pages.showable|filter(p => p.path matches '{^docs/' ~ group|slugify ~ '}') ~%}~#}
            {%- for p in site.pages.showable|filter(p => p.folder == 'docs/' ~ group.title|slugify) ~%}
                    <li>
                        <a class="flex gap-x-4 py-2 px-3 text-sm text-gray-800 rounded-lg hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:hover:bg-neutral-700 dark:text-neutral-300 dark:focus:bg-neutral-700 {% if url(p) == url(page) %}active-link bg-gray-100{% endif %}"
                            href="{{ url(p) }}">

              {%- if p.menuTitle is defined ~%}
											{%- set page_title = p.menuTitle ~%}
										{%- else ~%}
											{%- set page_title = p.title ~%}
                    {%- endif ~%}
											{{ page_title }}
                        </a>
                    </li>
            {%- endfor ~%}
                </ul>
            </div>
        </li>
            {%- endif ~%}
          {%- endfor ~%}
          </ul>
        </div>
        {%- endblock navigation ~%}

          </div>
          <!-- End Content -->



